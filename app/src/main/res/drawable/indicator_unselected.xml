<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    
    <!-- 未选中状态的指示器背景颜色 -->
    <solid android:color="#FFFFFF" />
    
    <!-- 指示器的边框 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />
    
    <!-- 指示器的大小 -->
    <size
        android:width="8dp"
        android:height="8dp" />
    
    <!-- 指示器的圆角 -->
    <corners android:radius="4dp" />
</shape>