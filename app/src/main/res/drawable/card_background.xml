<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 圆角矩形背景 -->
    <solid android:color="@color/white" />
    <!-- 设置圆角大小 -->
    <corners android:radius="8dp" />
    <!-- 设置边框 -->
    <stroke
        android:width="1dp"
        android:color="@color/divider_color" />
    <!-- 设置内边距 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>