<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/button_secondary_ripple_color">
    
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    
    <item>
        <selector>
            <!-- 按下状态 -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="28dp" />
                    <solid android:color="@color/button_secondary_pressed" />
                    <stroke android:width="2dp" android:color="@color/gradient_start" />
                </shape>
            </item>
            
            <!-- 禁用状态 -->
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="28dp" />
                    <solid android:color="@color/button_disabled_background" />
                    <stroke android:width="1dp" android:color="@color/button_disabled_stroke" />
                </shape>
            </item>
            
            <!-- 普通状态 -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="28dp" />
                    <solid android:color="@color/white" />
                    <stroke android:width="2dp" android:color="@color/gradient_start" />
                </shape>
            </item>
        </selector>
    </item>
    
</ripple>