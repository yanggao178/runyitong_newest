<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- 顶部Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:elevation="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加体检报告"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- 滚动视图 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background">

            <!-- 报告名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报告名称"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_report_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入报告名称"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- 检查日期 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查日期"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_exam_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="点击选择检查日期"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- 医院名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医院名称"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_hospital_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入医院名称"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- 报告摘要 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报告摘要"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入报告摘要"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- 医生意见 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医生意见"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_doctor_opinion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入医生意见"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- 关键发现 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关键发现"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_key_findings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入关键发现"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- 正常项目 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正常项目"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_normal_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入正常项目"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- 异常项目 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="异常项目"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_abnormal_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入异常项目"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- 建议 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建议"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_suggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入建议"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 保存按钮 -->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/primary_color"
        android:padding="16dp" />

</LinearLayout>