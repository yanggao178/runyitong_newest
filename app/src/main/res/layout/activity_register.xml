<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_enhanced"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Logo区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="20dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/card_background"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile"
                app:tint="@color/gradient_start"
                android:contentDescription="应用Logo" />

        </androidx.cardview.widget.CardView>

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建新账户"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.08"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请填写以下信息完成注册"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:alpha="0.85"
            android:layout_marginBottom="40dp"
            android:letterSpacing="0.02"
            android:gravity="center" />

        <!-- 注册方式选择 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/card_background"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <Button
                    android:id="@+id/btn_password_mode"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="账户密码注册"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_primary_selector"
                    android:letterSpacing="0.05" />

                <Button
                    android:id="@+id/btn_sms_mode"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="手机验证码注册"
                    android:textColor="@color/gradient_start"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_outline_selector"
                    android:letterSpacing="0.05" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 注册表单 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/card_background"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- 账户密码注册模式 -->
                <LinearLayout
                    android:id="@+id/layout_password_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- 用户名输入框 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconDrawable="@drawable/ic_profile"
                        app:startIconTint="@color/gradient_start"
                        app:hintTextColor="@color/text_secondary"
                        app:boxStrokeColor="@color/gradient_start"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="3dp"
                        app:hintAnimationEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_username"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="用户名"
                            android:inputType="text"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:paddingVertical="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 邮箱输入框已移除 -->

                    <!-- 密码输入 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/gradient_start"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/gradient_start"
                        app:hintTextColor="@color/text_secondary"
                        app:boxStrokeColor="@color/gradient_start"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="3dp"
                        app:hintAnimationEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="密码（至少6位）"
                            android:inputType="textPassword"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:paddingVertical="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 确认密码输入 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/gradient_start"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/gradient_start"
                        app:hintTextColor="@color/text_secondary"
                        app:boxStrokeColor="@color/gradient_start"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="3dp"
                        app:hintAnimationEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="确认密码"
                            android:inputType="textPassword"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:paddingVertical="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- 手机验证码注册模式 -->
                <LinearLayout
                    android:id="@+id/layout_sms_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- 用户名输入框 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_username_sms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconDrawable="@drawable/ic_profile"
                        app:startIconTint="@color/gradient_start"
                        app:hintTextColor="@color/text_secondary"
                        app:boxStrokeColor="@color/gradient_start"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="3dp"
                        app:hintAnimationEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_username_sms"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="用户名"
                            android:inputType="text"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:paddingVertical="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 手机号输入框 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="@color/gradient_start"
                        app:hintTextColor="@color/text_secondary"
                        app:boxStrokeColor="@color/gradient_start"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="3dp"
                        app:hintAnimationEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="手机号"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:paddingVertical="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 验证码区域 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="32dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_verification_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="16dp"
                            app:boxBackgroundMode="filled"
                            app:boxBackgroundColor="@color/input_background"
                            app:boxCornerRadiusTopStart="20dp"
                            app:boxCornerRadiusTopEnd="20dp"
                            app:boxCornerRadiusBottomStart="20dp"
                            app:boxCornerRadiusBottomEnd="20dp"
                            app:startIconDrawable="@drawable/ic_security"
                            app:startIconTint="@color/gradient_start"
                            app:hintTextColor="@color/text_secondary"
                            app:boxStrokeColor="@color/gradient_start"
                            app:boxStrokeWidth="2dp"
                            app:boxStrokeWidthFocused="3dp"
                            app:hintAnimationEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_verification_code"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:hint="验证码"
                                android:inputType="number"
                                android:maxLength="6"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="16dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="56dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="8dp"
                                android:backgroundTint="@color/gradient_start"
                                app:cardUseCompatPadding="true">

                                <Button
                                    android:id="@+id/btn_send_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="发送验证码"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:background="@android:color/transparent"
                                    android:paddingHorizontal="20dp"
                                    android:minWidth="120dp"
                                    android:minHeight="0dp"
                                    android:letterSpacing="0.05" />

                            </androidx.cardview.widget.CardView>

                            <!-- 发送验证码加载指示器 -->
                            <ProgressBar
                                android:id="@+id/pb_send_code_loading"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_centerInParent="true"
                                android:indeterminateTint="@color/gradient_start"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </LinearLayout>

                    <!-- 密码输入 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_password_sms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/gradient_start"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/gradient_start"
                        app:hintTextColor="@color/text_secondary"
                        app:boxStrokeColor="@color/gradient_start"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="3dp"
                        app:hintAnimationEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_password_sms"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="密码（至少6位）"
                            android:inputType="textPassword"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:paddingVertical="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 确认密码输入 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_confirm_password_sms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/gradient_start"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/gradient_start"
                        app:hintTextColor="@color/text_secondary"
                        app:boxStrokeColor="@color/gradient_start"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="3dp"
                        app:hintAnimationEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_confirm_password_sms"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="确认密码"
                            android:inputType="textPassword"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:paddingVertical="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>



                <!-- 注册按钮和加载指示器 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="12dp"
                        android:backgroundTint="@color/gradient_start"
                        app:cardUseCompatPadding="true">

                        <Button
                            android:id="@+id/btn_register"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:text="注册"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@android:color/transparent"
                            android:letterSpacing="0.15" />

                    </androidx.cardview.widget.CardView>

                    <!-- 注册加载指示器 -->
                    <ProgressBar
                        android:id="@+id/pb_register_loading"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:indeterminateTint="@android:color/white"
                        android:visibility="gone" />

                </RelativeLayout>

                <!-- 返回登录 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="@color/card_background"
                    app:cardUseCompatPadding="true">

                    <Button
                        android:id="@+id/btn_back_to_login"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="已有账号？返回登录"
                        android:textColor="@color/gradient_start"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:letterSpacing="0.08" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 底部提示 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="注册即表示同意用户协议和隐私政策"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_background_transparent"
            android:padding="12dp"
            android:alpha="0.75"
            android:letterSpacing="0.05" />

    </LinearLayout>

</ScrollView>