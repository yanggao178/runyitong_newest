<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- 状态筛选按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:padding="8dp"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/btn_all"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="@string/order_status_all"
            android:textSize="14sp"
            android:background="@drawable/bg_card"
            android:textColor="@color/colorPrimary"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btn_pending_shipment"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="@string/order_status_pending_shipment"
            android:textSize="14sp"
            android:background="@drawable/bg_card"
            android:textColor="@android:color/darker_gray"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btn_pending_receipt"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="@string/order_status_pending_receipt"
            android:textSize="14sp"
            android:background="@drawable/bg_card"
            android:textColor="@android:color/darker_gray"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btn_completed"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="@string/order_status_completed"
            android:textSize="14sp"
            android:background="@drawable/bg_card"
            android:textColor="@android:color/darker_gray"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <!-- 订单列表内容容器 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 订单列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orders_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp" />

        <!-- 加载进度条 -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- 空状态提示 -->
        <TextView
            android:id="@+id/empty_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="24dp"
            android:text="暂无订单记录"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>