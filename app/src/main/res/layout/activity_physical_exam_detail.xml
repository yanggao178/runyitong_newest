<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 顶部工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="体检报告详情" />

    <!-- 滚动视图，用于容纳报告内容 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="16dp">

            <!-- 报告基本信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:id="@+id/tv_report_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="体检报告名称"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查日期："
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary" />
                    <TextView
                        android:id="@+id/tv_exam_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023-05-15"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医院名称："
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary" />
                    <TextView
                        android:id="@+id/tv_hospital_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XX医院"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
            </LinearLayout>

            <!-- 报告摘要 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="报告摘要"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />
                
                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="此次体检基本正常，建议保持健康的生活方式，定期复查。"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- 医生意见 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="医生意见"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />
                
                <TextView
                    android:id="@+id/tv_doctor_opinion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. 血压略高，建议低盐饮食，适量运动。\n2. 血脂轻度异常，建议控制饮食，减少高脂肪食物摄入。\n3. 肝功能正常，继续保持良好的生活习惯。\n4. 建议每半年复查一次。"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- 关键发现 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="关键发现"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />
                
                <TextView
                    android:id="@+id/tv_key_findings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. 血压：140/90 mmHg\n2. 胆固醇：5.8 mmol/L\n3. 血糖：5.6 mmol/L\n4. 体重指数：24.5 kg/m²"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- 正常项目 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正常项目"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />
                
                <TextView
                    android:id="@+id/tv_normal_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- 血常规\n- 尿常规\n- 肝功能\n- 肾功能\n- 心电图\n- 胸部X光\n- 腹部B超"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- 异常项目 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="异常项目"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />
                
                <TextView
                    android:id="@+id/tv_abnormal_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- 血压偏高\n- 血脂轻度异常"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- 建议 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="32dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="建议"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />
                
                <TextView
                    android:id="@+id/tv_recommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. 保持均衡饮食，减少盐和脂肪的摄入。\n2. 每周进行至少150分钟中等强度的有氧运动。\n3. 保持充足的睡眠，避免熬夜。\n4. 减少压力，保持心情愉悦。\n5. 遵医嘱定期复查血压和血脂。\n6. 如有不适，及时就医。"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 底部操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">
        
        <Button
            android:id="@+id/btn_view_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看完整报告"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/primary"
            android:padding="12dp"
            android:layout_marginRight="8dp" />
        
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除报告"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/error_color"
            android:padding="12dp"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

</LinearLayout>