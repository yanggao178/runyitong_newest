<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_enhanced"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Logo区域 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logo_area"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="20dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/card_background"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person"
                app:tint="@color/gradient_start"
                android:contentDescription="会员图标" />

        </androidx.cardview.widget.CardView>

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成为会员"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.08"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开通会员享受更多专业医疗服务"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:alpha="0.85"
            android:layout_marginBottom="40dp"
            android:letterSpacing="0.02"
            android:gravity="center" />

        <!-- 会员信息表单 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            android:backgroundTint="@color/card_background"
            android:layout_marginHorizontal="20dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- 会员价格展示 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一年会员费用"
                        android:textSize="16sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_member_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥299"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/gradient_start"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有效期：12个月"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:alpha="0.8" />
                </LinearLayout>

                <!-- 会员特权列表 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员特权"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- 添加便宜商品价格字样 -->
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_verified"
                app:tint="@color/gradient_start"
                android:layout_marginRight="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购买便宜的商品"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_verified"
                app:tint="@color/gradient_start"
                android:layout_marginRight="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="无限次AI舌诊面诊问诊分析"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_verified"
                app:tint="@color/gradient_start"
                android:layout_marginRight="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="专业中医诊断报告"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_verified"
                app:tint="@color/gradient_start"
                android:layout_marginRight="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优先预约专家号"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_verified"
                app:tint="@color/gradient_start"
                android:layout_marginRight="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24小时在线问诊服务"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 支付方式选择 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <RadioGroup
                        android:id="@+id/rg_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rb_alipay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="支付宝"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:buttonTint="@color/gradient_start"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/rb_wechat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="微信支付"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:buttonTint="@color/gradient_start" />
                    </RadioGroup>
                </LinearLayout>

                <!-- 同意协议 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="32dp">

                    <CheckBox
                        android:id="@+id/cb_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/gradient_start"
                        android:layout_marginRight="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我已阅读并同意《会员服务协议》和《隐私政策》"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- 立即开通按钮 -->
                <RelativeLayout
                    android:id="@+id/button_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="8dp"
                        android:backgroundTint="@color/gradient_start"
                        app:cardUseCompatPadding="true">

                        <Button
                            android:id="@+id/btn_subscribe"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:text="立即开通"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@android:color/transparent"
                            android:letterSpacing="0.15"
                            android:elevation="0dp" />

                    </androidx.cardview.widget.CardView>

                    <ProgressBar
                        android:id="@+id/pb_subscribe_loading"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:indeterminateTint="@color/white" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 底部提示 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="40dp"
            android:text="如有问题，请联系客服：400-123-4567"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:alpha="0.75"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:background="@drawable/rounded_background_transparent"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>