<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:rippleColor="@color/primary_light"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Page Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/page_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/page_number_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="第 1 页"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="第 1 页" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/page_size_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A4"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                tools:text="A4" />

        </LinearLayout>

        <!-- PDF Page Content Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:minHeight="400dp">

                <!-- PDF Page Image -->
                <ImageView
                    android:id="@+id/pdf_page_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="PDF页面"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    tools:src="@drawable/ic_pdf_page"
                    tools:visibility="visible" />

                <!-- Loading State -->
                <LinearLayout
                    android:id="@+id/loading_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="400dp"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:visibility="visible">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/loading_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        app:indicatorColor="@color/primary_color"
                        app:trackColor="@color/primary_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="正在加载页面..."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Error State -->
                <LinearLayout
                    android:id="@+id/error_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="400dp"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:alpha="0.6"
                        android:src="@drawable/ic_error"
                        app:tint="@color/error_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="加载失败"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/error_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="页面渲染出错"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        tools:text="页面渲染出错" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/retry_page_button"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="重试"
                        android:textColor="@color/primary_color"
                        app:cornerRadius="6dp" />

                </LinearLayout>

                <!-- Page Overlay Info -->
                <LinearLayout
                    android:id="@+id/page_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_overlay"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_zoom"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/zoom_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="100%"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_fullscreen"
                        app:tint="@android:color/white" />

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Page Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_info"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/page_info_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="点击可放大查看"
                android:textColor="@color/text_secondary"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/page_load_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.5s"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                tools:text="0.5s" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>