<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- 美化的标题栏 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/primary_color">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">
                
            <Button
                    android:id="@+id/btn_drug_query"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="药品查询"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_background"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true" />
                    
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                
                <TextView
                    android:id="@+id/tv_ai_tongue_diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="AI中医舌面诊"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_background"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true" />
                
        </LinearLayout>
        
    </androidx.cardview.widget.CardView>

    <!-- 美化的分析结果区域 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:backgroundTint="@color/white">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            
            <!-- 结果标题栏 -->
            <LinearLayout
                android:id="@+id/ll_result_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">
                
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_color" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分析结果"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />
                    
            </LinearLayout>
            
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ll_result_header"
                android:background="@color/divider_color"
                android:layout_marginBottom="12dp" />
            
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/divider"
                android:scrollbars="vertical"
                android:fadeScrollbars="false">
                
                <TextView
                    android:id="@+id/tv_analysis_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💡 请输入症状描述，点击上传按钮或按回车键进行AI分析\n\n🔍 您可以：\n• 详细描述您的症状\n• 上传医学影像进行识别\n• 获得专业的中医建议"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="6dp"
                    android:padding="8dp" />
                    
            </ScrollView>
            
            <!-- 加载进度条和提示 -->
            <LinearLayout
                android:id="@+id/ll_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/loading_background"
                android:padding="24dp">
                
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:indeterminateTint="@color/primary_color" />
                    
                <TextView
                     android:id="@+id/tv_loading_text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="🤖 AI正在分析您的症状\n⏱️ 预计需要10-30秒，请耐心等待"
                     android:textSize="12sp"
                     android:textColor="@color/primary_color"
                     android:gravity="center"
                     android:lineSpacingExtra="4dp" />
                    
            </LinearLayout>
            
        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

    <!-- 美化的输入区域 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/white">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <!-- 输入提示标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_color" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="症状描述"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />
                    
            </LinearLayout>
            
            <!-- 输入框区域 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <LinearLayout
                    android:id="@+id/ll_symptoms_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_background"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/et_symptoms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请详细描述您的症状..."
                        android:textColorHint="@color/text_hint"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:background="@null"
                        android:inputType="textMultiLine"
                        android:minHeight="48dp"
                        android:maxLines="3" />

                    <ImageButton
                        android:id="@+id/btn_select_image_source"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_image"
                        android:background="@drawable/button_circle"
                        android:backgroundTint="@color/primary_color"
                        app:tint="@color/white"
                        android:contentDescription="选择图片来源" />

                    <ImageButton
                        android:id="@+id/btn_voice_recognition"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_mic"
                        android:background="@drawable/button_circle"
                        android:backgroundTint="@color/secondary_color"
                        app:tint="@color/white"
                        android:contentDescription="语音识别" />

                    <ImageButton
                        android:id="@+id/btn_upload_prescription"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_upload"
                        android:background="@drawable/button_circle"
                        android:backgroundTint="@color/success_color"
                        app:tint="@color/white"
                        android:contentDescription="上传处方图片" />
                </LinearLayout>
                
                <!-- 历史记录下拉列表 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_history_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_symptoms_input"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/white">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">
                        
                        <!-- 历史记录标题 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp">
                            
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="历史记录"
                                android:textSize="12sp"
                                android:textColor="@color/primary_color"
                                android:textStyle="bold" />
                                
                            <TextView
                                android:id="@+id/tv_clear_history"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="清空"
                                android:textSize="10sp"
                                android:textColor="@color/text_hint"
                                android:padding="4dp"
                                android:background="?android:attr/selectableItemBackground" />
                                
                        </LinearLayout>
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider_color"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginBottom="4dp" />
                        
                        <!-- 历史记录列表 -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="200dp"
                            android:scrollbars="vertical" />
                            
                    </LinearLayout>
                    
                </androidx.cardview.widget.CardView>
                
            </RelativeLayout>
            
            <!-- 功能提示 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="💡 提示：您可以输入文字描述或上传医学影像进行AI分析"
                android:textSize="10sp"
                android:textColor="@color/text_hint"
                android:gravity="center" />
                
        </LinearLayout>
        
    </androidx.cardview.widget.CardView>

</LinearLayout>