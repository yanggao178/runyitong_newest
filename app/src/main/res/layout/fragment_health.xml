<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 美化的标题栏 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/primary_color"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_book"
                    android:layout_marginEnd="12dp"
                    app:tint="@android:color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医学书库"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经典医学典籍"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.8"
                        android:background="@drawable/badge_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 中医古籍书架 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chinese_medicine"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/tradtional_chinese" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="中医古籍"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/tradtional_chinese" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="传统医学"
                        android:textSize="8sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/badge_background"
                        android:backgroundTint="@color/tradtional_chinese"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp" />

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_color"
                        android:layout_marginBottom="12dp" />

                <!-- 中医搜索框 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/search_bg"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/tradtional_chinese"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/chinese_medicine_search"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="搜索中医古籍..."
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/chinese_medicine_clear_search"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close"
                        app:tint="@color/text_hint"
                        android:visibility="gone"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- 中医书籍RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chinese_medicine_books"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:padding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 西医经典书架 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_western_medicine"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/western_medicine" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="西医经典"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/western_medicine" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现代医学"
                        android:textSize="8sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/badge_background"
                        android:backgroundTint="@color/western_medicine"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp" />

                <!-- 西医搜索框 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/search_bg"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/western_medicine"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/western_medicine_search"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="搜索西医经典..."
                        android:textSize="14sp"
                        android:textColor="#2C3E50"
                        android:textColorHint="#95A5A6"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/western_medicine_clear_search"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close"
                        app:tint="#95A5A6"
                        android:visibility="gone"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- 西医书籍RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/western_medicine_books"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:padding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 医学视频区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 美化的标题栏 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/gradient_video_header">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_video"
                        android:layout_marginEnd="12dp"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="医学视频"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="精选课程"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/badge_rounded"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 视频选项卡 - 美化版 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="12dp"
                    android:background="@drawable/tab_background"
                    android:elevation="2dp">

                    <Button
                        android:id="@+id/tab_selected_works"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="精选"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/tab_button_selected"
                        android:layout_margin="4dp"
                        android:elevation="0dp"
                        android:stateListAnimator="@null" />

                    <Button
                        android:id="@+id/tab_beginner_works"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="入门"
                        android:textSize="15sp"
                        android:textColor="@color/primary_color"
                        android:background="@android:color/transparent"
                        android:layout_margin="4dp"
                        android:elevation="0dp"
                        android:stateListAnimator="@null" />

                </LinearLayout>

                <!-- 视频列表RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/video_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:padding="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>