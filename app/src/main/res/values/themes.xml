<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Xun_Yi_Tong" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- 自定义对话框主题 -->
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- 对话框动画样式 -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!-- 增强按钮样式 -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_enhanced_ripple</item>
        <item name="android:elevation">6dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gradient_start</item>
        <item name="android:background">@drawable/button_secondary_ripple</item>
        <item name="android:elevation">4dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="DangerButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/error_red</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
    </style>
    
    <!-- 浮动操作按钮样式 -->
    <style name="EnhancedFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/fab_enhanced</item>
        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
        <item name="tint">@color/white</item>
    </style>
    
    <!-- 小型按钮样式 -->
    <style name="SmallButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_enhanced_ripple</item>
        <item name="android:elevation">4dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:minWidth">80dp</item>
    </style>
    
    <!-- 确认注销账号对话框主题 -->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="buttonBarPositiveButtonStyle">@style/DangerButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/SecondaryButton</item>
    </style>
    
    <!-- 药品查询对话框主题 -->
    <style name="CustomAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
</resources>