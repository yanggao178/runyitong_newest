<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:padding="24dp">

    <!-- 增强的标题栏 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/primary_color"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_book"
                android:layout_marginEnd="16dp"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医学书库"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经典医学典籍，专业知识宝库"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- 收藏按钮 -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite"
                app:backgroundTint="@android:color/white"
                app:tint="@color/primary_color"
                app:fabSize="mini"
                app:elevation="4dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 搜索和筛选栏 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="12dp"
                app:tint="@color/text_secondary" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="搜索书籍、作者或关键词..."
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/text_secondary" />

            <Button
                android:id="@+id/btn_filter"
                style="@style/SmallButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="筛选"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp" />

            <Button
                android:id="@+id/btn_search"
                style="@style/SmallButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="搜索"
                android:textSize="14sp"
                android:paddingHorizontal="16dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 分类标签 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <Button
                android:id="@+id/btn_category_all"
                style="@style/SecondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="全部"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:paddingHorizontal="20dp" />

            <Button
                android:id="@+id/btn_category_classic"
                style="@style/SecondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="经典医籍"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:paddingHorizontal="20dp" />

            <Button
                android:id="@+id/btn_category_modern"
                style="@style/SecondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="现代医学"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:paddingHorizontal="20dp" />

            <Button
                android:id="@+id/btn_category_tcm"
                style="@style/SecondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="中医典籍"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:paddingHorizontal="20dp" />

            <Button
                android:id="@+id/btn_category_reference"
                style="@style/SecondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="参考资料"
                android:textSize="14sp"
                android:paddingHorizontal="20dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- 主要内容区域 - 使用约束布局实现侧边栏和主内容区 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 左侧书架视图 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bookshelf_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的书架"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_bookshelf"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 中间分割线 -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <!-- 右侧书籍网格 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/books_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginStart="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="书籍列表"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- 书籍网格 - 大屏幕使用2列布局 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_books"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:clipToPadding="false"
                    app:spanCount="2"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>