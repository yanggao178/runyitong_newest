        <meta-data android:name="com.baidu.speech.API_KEY" android:value="IndjZKoENELgClpTQgYzMZud" />
        <meta-data android:name="com.baidu.speech.SECRET_KEY" android:value="HpDagnbj6V8TfbvIJ26z9BWnfuBrAYbh" />
        
        <!-- 百度语音识别服务 -->
        <service android:name="com.baidu.speech.VoiceRecognitionService" android:exported="false" />

    </application>

</manifest>

