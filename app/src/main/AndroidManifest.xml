<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 相机和存储权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
    <!-- Android 11+ 需要管理外部存储权限（如果需要访问其他应用的文件） -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" />
    
    <!-- 定位权限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- WiFi状态权限（用于网络定位辅助） -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- 悬浮窗权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- 支付宝SDK权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <!-- 微信支付SDK权限 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- 通知权限 - Android 13+ 必需 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 在AndroidManifest.xml中添加 -->
    <queries>
        <package android:name="com.tencent.mm" />
        <package android:name="com.tencent.mobileqq" />
    </queries>
    
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Xun_Yi_Tong"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:testOnly="false"
        android:largeHeap="true"
        tools:targetApi="31">

        <!-- Declare MainActivity as the default activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ProductDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.BookDetailActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
            

            
        <activity
            android:name=".activity.OrderActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AddressActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.IdentityVerificationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.PaymentSettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.ModifyPaymentPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SetPaymentPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SecuritySettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.MyAppointmentsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.MyPrescriptionsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.HealthRecordActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.EditHealthInfoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.AddPhysicalExamActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.PhysicalExamDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".activity.ReportViewerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- 医院科室列表Activity -->
        <activity
            android:name=".activity.HospitalDepartmentListActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- 药店商品列表Activity -->
        <activity
            android:name=".activity.PharmacyProductsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- 微信支付回调Activity -->
        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="wx1234567890abcdef" />
            </intent-filter>
        </activity>
            
        <!-- FileProvider for camera functionality -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.wenxing.runyitong.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- 无障碍服务声明 -->
        <service
            android:name=".service.WeChatAccessibilityService"
            android:exported="false"
            android:label="微信自动搜索服务"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- 视频播放Activity -->
        <activity
            android:name=".activity.VideoPlayerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- 物流跟踪Activity -->
        <activity
            android:name=".activity.ExpressTrackingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- 会员注册Activity -->
        <activity
            android:name=".activity.MemberRegistrationActivity"
            android:exported="false"
